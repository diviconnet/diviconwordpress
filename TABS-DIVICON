<script type="text/javascript">
jQuery(document).ready(function() {
// Hide the div
// jQuery('#reveal').hide();
jQuery('.rv_button1').click(function(e){
e.preventDefault();
jQuery("#reveal1").slideToggle();
// Hide the div
jQuery('#reveal2').hide();
jQuery('#reveal3').hide();
jQuery('#reveal4').hide();
jQuery('#reveal5').hide();
jQuery('.rv_button1').toggleClass('opened closed');
});
});
</script>

